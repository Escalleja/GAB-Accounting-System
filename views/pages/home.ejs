<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accounting</title>

    <!-- favicon -->
    <link rel="icon" type="favicon" href="/img/brand.png">

    <!--Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/5bac83b9a1.js" crossorigin="anonymous"></script>

    <!-- Local css -->
    <link rel="stylesheet" href="/css/home-stylesheet.css">
    <link rel="stylesheet" href="/css/login-stylesheet.css">
    <link rel="stylesheet" href="/css/modal-stylesheet.css">
    <link rel="stylesheet" href="/css/table-stylesheet.css">
    <link rel="stylesheet" href="/css/navbar-style.css">

</head>

<body>
    <section id="title">
        <nav class="navbar-bd">
            <div class="nav-brand">
                <a href="/homepage"><img src="/img/brand.png" alt="logo"></a>
            </div>

            <div class="search-bd">
                <form action="" class="search-bar">
                    <button title="searchBtn"><i class="fa-solid fa-magnifying-glass"></i></button>
                    <input type="search" name="" id="" placeholder="Search JEV No. ">
                </form>
            </div>

            <div class="nav-content-bd ml-auto">
                <ul>
                    <li class="navbar-item dropdown">
                        <%= `${username}` %> &ThickSpace; <i class="fa-solid fa-caret-down"></i>
                        <div class="dropdown-container">
                            <div class="switch-container">
                                <div class="drop-item">
                                    <i class="fa-solid fa-sun switch-item"></i>
                                    <label class="switch switch-item">
                                        <input type="checkbox" title="themeBtn" id="">
                                        <span class="slider round"></span>
                                    </label>
                                    <i class="fa-solid fa-moon switch-item"></i>
                                </div>
                            </div>
                            <a href="" class="drop-item"><i class="fa-solid fa-lock"></i> Change password</a>
                            <a href="/logout" class="drop-item"><i class="fa-solid fa-right-from-bracket"></i>
                                Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>


        <div class="suggested">
            <h5>Suggested</h5>
            <div class="suggested-item">
                <a href="/asset"><button><i class="fa-solid fa-list"></i> Assets</button></a>
                <a href="/equity"><button><i class="fa-solid fa-list"></i> Equity</button></a>
                <a href="/expenses"><button><i class="fa-solid fa-list"></i> Expenses</button></a>
                <div class="suggested-item">
                    <a href="/liabilities"><button><i class="fa-solid fa-list"></i> Liabilities</button></a>
                    <a href="/revenue"><button><i class="fa-solid fa-list"></i> Revenue/Income</button></a>
                </div>
            </div>
    </section>


    <section id="content">
        <div class="content-item">
            <hr>
            <div class="content-header">
                <h5>Records</h5>
                <div class="content-header-btn ml-auto">
                    <button><i class="fa-solid fa-trash"></i></button>
                    <a href="print.html" <i class="fa-solid fa-print"></i></a>
                </div>
            </div>

            <table id="records-content">
                <tr class="table-header">
                    <th>Reference JEV No.</th>
                    <th>Create Date</th>
                    <th>Last Modified</th>
                    <th class="more-btn th-icon">
                        <span>
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                        </span>
                        <div class="more-bd">
                            <li>Select All</li>
                            <li>Monthly</li>
                            <li>Quarterly</li>
                            <li>Semi-Annually</li>
                            <li>Annually</li>

                        </div>
                    </th>
                </tr>

                <tbody id="tbody-records">
                    <% if(data.recordset.length != 0){
                    for(let i = 0; i < data.recordset.length; i++){ %>
                    <tr class="table-content">
                        <td id="jev-no"><i class="fa-solid fa-file"></i>&ThickSpace;
                            <%=data.recordset[i].jevNo.slice(3)%>
                        </td>
                        <td><span><%= data.recordset[i].dateCreated %></span> <span class="byName"> by
                                <%= data.recordset[i].createdBy %></span></td>
                        <td><span><%= data.recordset[i].dateModified %></span> <span class="byName"> by
                                <%= data.recordset[i].modifiedBy %></span></td>
                        <td id="selected-item"><input type="checkbox" name="chk" id=""></td>
                    </tr>
                    <% } %>
                    <%  } else{ %>
                    <tr class="table-content">
                        <td colspan="4"> No Records Available</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Create New Button -->
    <section id="create-new">
        <div class="create-new-btn">
            <button type="submit" id="btnNewEntry"><i class="fa-solid fa-circle-plus"></i> Create</button>
        </div>

        <!-- JEV MODAL -->
        <div id="jevModalForm" class="modal-jev">
            <div class="jev-modal-content">
                <form id="create-jev">
                    <span class="btnBackJev"><i class="fa-sharp fa-solid fa-angle-left"></i>&ThickSpace; Back</span>
                    <div class="form-row">
                        <div class="form-group col-lg-3"></div>
                        <div class="form-group col-lg-6">
                            <label for="jevInput" class="jev label">Reference JEV #</label>
                            <input type="text" id="jevInput" name="jevInput" class="form-control col-lg-12 jevInput"
                            required></input>
                        </div>
                        <div class="form-group col-lg-3"></div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-3"></div>
                        <div class="form-group col-lg-6 mb-0 next-btn">
                            <!-- TODO save here -->
                            <button type="submit" class="btnSaveJev btnJev">Next</button>
                        </div>
                        <div class="form-group col-lg-3"></div>
                    </div>
                </form>

            </div>
        </div>
        <!-- MODAL -->
        <div id="modalForm" class="modal">
            <div class="modal-content" id="style-1">
                <span class="btnBack"><i class="fa-sharp fa-solid fa-angle-left"></i>&ThickSpace; Back</span>
                <form id="entry-form">
                    <div class="form-row">

                        <!-- Date -->
                        <div class="form-group col-lg-6 date-group">
                            <label for="dateForm" class="label">Date (mm/dd/yyyy)</label>
                            <input type="data" class="form-control col-lg-12 date-form" id="dateForm" name="dateForm"
                             required></input>
                        </div>

                        <!-- UACS Code -->
                        <div class="form-group col-lg-6 uacs-group">
                            <label for="uacs" class="label">UACS Code</label>
                            <input id="uacs" class="form-control col-lg-12 uacs-form" name="uacs"
                             required></input>
                        </div>
                    </div>
                    <!-- Account -->
                    <div class="form-row">
                        <div class="form-group col-lg-12 description-group">
                            <label for="description" class="label">Account</label>
                            <textarea name="text" id="description" rows="2" cols="65"
                                id="description" class="form-control col-lg-12" name="description"></textarea>
                        </div>
                    </div>
                    <!-- Debit and Credit form -->
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <label for="debit" class="label">Debit</label>
                            <input type="text" id="debit" class="form-control col-lg-12 debit-form" name="debit"
                             required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <hr>
                        </div>
                    </div>
                    <!-- For Added Input Fields -->
                    <div class="form-row" id="inputFieldContainer">
                    </div>
                    <div class="form-row">
                        <!-- Add a container to hold the input fields -->
                        <div class="form-group col-lg-6">
                            <!-- Add input field -->
                            <button id="addInput" class="btnInput btn"><i class="fa-solid fa-circle-plus"></i>
                                Add</button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-12 modal-footer">
                            <!-- TODO save here -->
                            <button type="submit" class="btnSave btn btn-float">Save</button>
                            <!-- TODO cancel here -->
                            <button type="reset" id="formCancel" class="btnCancel btn btn-float">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- SELECTED MODAL -->
        <div id="selectedModalForm" class="modal">
            <div class="modal-content" id="style-1">
                <span class="btnBack"><i class="fa-sharp fa-solid fa-angle-left"></i>&ThickSpace; Back</span>
                <form id="entry-form">
                    <!-- For Added Input Fields -->
                    <div class="form-row" id="selectedInputFieldContainer">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-6">
                            <!-- Add input field -->
                            <button id="addInput" class="btnInput btn"><i class="fa-solid fa-circle-plus"></i>
                                Add</button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-12 modal-footer">
                            <!-- TODO save here -->
                            <button type="submit" class="btnSave btn btn-float">Save</button>
                            <!-- TODO cancel here -->
                            <button type="reset" id="formCancelSelected" class="btnCancel btn btn-float">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </section>
    <script src="socket.io/socket.io.js"></script>
    <script src="/js/accounting.js"></script>
    <script src="/js/dataentry-script.js"></script>
</body>

</html>