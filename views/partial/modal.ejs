<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accounting</title>

    <!-- favicon -->
    <link rel="icon" type="favicon" href="/img/brand.png">

    <!--Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/5bac83b9a1.js" crossorigin="anonymous"></script>

    <!-- Local css -->
    <link rel="stylesheet" href="/css/home-stylesheet.css">
    <link rel="stylesheet" href="/css/login-stylesheet.css">
    <link rel="stylesheet" href="/css/modal-stylesheet.css">
    <link rel="stylesheet" href="/css/table-stylesheet.css">
    <link rel="stylesheet" href="/css/preloader-style.css">
    <link rel="stylesheet" href="/css/navbar-style.css">

</head>

<body>

    <!-- Create New Button -->
    <section id="create-new">
        <div class="create-new-btn">
            <button type="submit" id="btnNewEntry"><i class="fa-solid fa-circle-plus"></i> Create</button>
        </div>

        <!-- JEV NO. MODAL -->
        <div id="jevModalForm" class="modal-jev">
            <div class="jev-modal-content">
                <form id="create-jev">
                    <span class="btnBackJev"><i class="fa-sharp fa-solid fa-angle-left"></i>&ThickSpace; Back</span>
                    <div class="form-row">
                        <div class="form-group col-lg-3"></div>
                        <div class="form-group col-lg-6">
                            <label for="jevInput" class="jev label">Reference JEV No.</label>
                            <input type="text" id="jevInput" name="jevInput" class="form-control col-lg-12 jevInput"
                                required></input>
                        </div>
                        <div class="form-group col-lg-3"></div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-3"></div>
                        <div class="form-group col-lg-6 mb-0 next-btn">
                            <!-- TODO save here -->
                            <button id="save" type="submit" class="btnSaveJev btnJev">
                                <div class="loaderJev"></div>
                                <span class="submit-btn-text">Next</span>
                            </button>
                        </div>
                        <div class="form-group col-lg-3"></div>
                    </div>
                </form>

            </div>
        </div>
        
        <!-- MODAL -->
        <div id="modalForm" class="modal">
            <div class="modal-content" id="style-1">
                <div class="header-modal">
                    <div class="left">
                        <span class="btnBack"><i class="fa-sharp fa-solid fa-angle-left"></i>&ThickSpace; Back</span>
                    </div>
                    <div class="right">
                        <a href="https://www.uacs.gov.ph/resources/latest-uacs/106/object-code" target="_blank" class="uacs-link">
                            <i class="fa fa-info-circle"></i>&ThickSpace;Object Code
                        </a>
                </div>
                </div>
                <form id="entry-form">
                    <div class="form-row">

                        <!-- Date and UACS-->
                        <div class="form-group col-lg-6 date-group">
                            <label for="dateForm" class="label">Date (mm/dd/yyyy)</label>
                            <input type="text" class="form-control col-lg-12 date-form mb-0" id="dateForm" name="dateForm"
                                required></input>
                                <label for="uacs" class="label">UACS Code</label>
                                <input id="uacs" class="form-control col-lg-12 mb-2 uacs-form" name="uacs" required>
                        </div>

                        <!-- Account -->
                        <div class="form-group col-lg-6 description-group">
                            <label for="description" class="label">Account</label>
                            <textarea name="text" id="description" rows="4" cols="90" id="description"
                                class="form-control col-lg-12" name="description"></textarea>
                        </div>

                        <!-- DEBIT -->
                        <div class="form-group col-lg-6 debit-group">
                            <label for="debit" class="label">Debit</label>
                            <input type="text" id="debit" class="form-control col-lg-12 debit-form" name="debit">
                        </div>

                        <!-- CREDIT -->
                        <div class="form-group col-lg-6 credit-group">
                            <label for="credit" class="label">Credit</label>
                            <input type="text" id="credit" class="form-control col-lg-12 credit-form" name="credit">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <hr>
                        </div>
                    </div>
                    
                    <!-- For Added Input Fields -->
                    <div class="form-row" id="inputFieldContainer">
                    </div>
                    <div class="form-row">
                        <!-- Add a container to hold the input fields -->
                        <div class="form-group col-lg-6">
                            <!-- Add input field -->
                            <button id="addInput" class="btnInput btn"><i class="fa-solid fa-circle-plus"></i>
                                Add</button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-12 modal-footer">
                            <!-- TODO save here -->
                            <button id="save" type="submit" class="btnSave btn btn-float">
                                <div class="loader"></div>
                                <p class="save-text">Save</p>
                            </button>
                            <!-- TODO cancel here -->
                            <button type="reset" id="formCancel" class="btnCancel btn btn-float">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- SELECTED MODAL -->
        <div id="selectedModalForm" class="modal">
            <div class="modal-content" id="style-1">
                <div class="header-modal">
                    <div class="left">
                        <span class="btnBack"><i class="fa-sharp fa-solid fa-angle-left"></i>&ThickSpace; Back</span>
                    </div>
                    <div class="right">
                        <a href="https://www.uacs.gov.ph/resources/latest-uacs/106/object-code" target="_blank" class="uacs-link">
                            <i class="fa fa-info-circle"></i>&ThickSpace;Object Code
                        </a>
                </div>  
                <form id="entry-selected-form">
                    <!-- For Added Input Fields -->
                    <div class="form-row col-lg-12" id="selectedInputFieldContainer">
                    </div>
                    <div class="form-row" id="selectedAdd">
                        <div class="form-group col-lg-6">
                            <!-- Add input field -->
                            <span id="selectedAdd" class="btnInput btn selectedAdd"><i class="fa-solid fa-circle-plus"></i>
                                Add</span>
                        </div>
                    </div>
                    <div class="form-row">                                                  
                            <div class="form-left-btn">
                                <div class="printDelBtn" id="del-btn"><i class="fa-solid fa-trash"></i></div>
                                <!-- <div class="printDelBtn" id="print-btn"><i class="fa-solid fa-print"></i></div> -->
                            </div>
                            
                            <div class="form-right-btn ml-auto">
                                <button type="submit" id="selectedSave" class="btnSave btn btn-float">
                                    <div class="loader"></div>
                                    <p class="save-btn-text">Save</p>
                                </button>
                                <button type="reset" id="formCancelSelected" class="btnCancel btn btn-float">Cancel</button>
                            </div>    
                    </div>
                </form>
            </div>
        </div>

    </section>

    <script src="socket.io/socket.io.js"></script>  
    <script src="/js/dataentry-script.js"></script>
</body>

</html>